<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework-message-queue:etc/queue_topology.xsd">
    <exchange name="magento" type="topic" connection="amqp">
        <binding id="customerMonolithBinding" topic="customer.monolith.connector.*" destinationType="queue" destination="customerMonolithToConnector"/>
    </exchange>
    <exchange name="magento" type="topic" connection="amqp">
        <binding id="customerServiceBinding" topic="customer.connector.service.*" destinationType="queue" destination="customerConnectorToService"/>
    </exchange>
</config>
